----------------- brute force -------------- NLog(N) ---- sc -> O(1)

#include <bits/stdc++.h>
int largestElement(vector<int> &arr, int n) {
  int largest;
  sort(arr.begin(), arr.end());
  for (int i = 0; i < arr.size(); i++) {
    if (arr[i] == arr[n - 1]) {
      largest = arr[i];
    }
  }
  return largest;
}

----------------------- better solution  -------  o(n)  --- sc O(1)

#include <bits/stdc++.h>
int largestElement(vector<int> &arr, int n) {
   
   int largest = arr[0];
   for(int i = 0 ; i < n ; i++)
   {
       if(arr[i] > largest)
       {
           largest = arr[i];
       }
   }
   return largest ;
}
